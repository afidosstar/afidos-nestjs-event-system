{
  "name": "@afidos/nestjs-event-notifications",
  "version": "1.0.0",
  "description": "Enterprise-grade event and notification system for NestJS applications with type-safe event emission, multi-channel notifications, and hybrid processing modes",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "commonjs",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "CHANGELOG.md",
    "MIGRATION.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "npm run clean && tsc -p tsconfig.build.json",
    "build:watch": "tsc -p tsconfig.build.json --watch",
    "clean": "rimraf dist coverage .nyc_output",
    "prebuild": "npm run clean",
    "prepublishOnly": "npm run build && npm run test:ci && npm run lint:check",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./tests/jest-e2e.json",
    "test:ci": "jest --coverage --ci --watchAll=false --passWithNoTests",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "lint": "eslint \"src/**/*.ts\" \"tests/**/*.ts\" --fix",
    "lint:check": "eslint \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\" \"*.{js,json,md}\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\" \"*.{js,json,md}\"",
    "typecheck": "tsc --noEmit",
    "start:dev": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:debug": "ts-node --inspect -r tsconfig-paths/register src/main.ts",
    "docs:generate": "typedoc --options typedoc.json",
    "docs:serve": "serve docs -l 3001",
    "release": "semantic-release",
    "release:dry": "semantic-release --dry-run"
  },
  "keywords": [
    "nestjs",
    "nestjs-module",
    "events",
    "event-driven",
    "notifications",
    "messaging",
    "queue",
    "email",
    "sms",
    "push-notifications",
    "webhook",
    "real-time",
    "typescript",
    "redis",
    "bullmq",
    "enterprise",
    "microservices",
    "async",
    "monitoring",
    "metrics",
    "prometheus",
    "scalable",
    "production-ready"
  ],
  "author": {
    "name": "Afidos Team",
    "email": "opensource@afidos.com",
    "url": "https://afidos.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/afidos/nestjs-event-notifications.git"
  },
  "bugs": {
    "url": "https://github.com/afidos/nestjs-event-notifications/issues"
  },
  "homepage": "https://github.com/afidos/nestjs-event-notifications#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "packageManager": "npm@10.2.4",
  "peerDependencies": {
    "@nestjs/bullmq": "^10.0.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/event-emitter": "^2.0.0",
    "@nestjs/typeorm": "^10.0.0",
    "bullmq": "^4.15.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "ioredis": "^5.3.0",
    "reflect-metadata": "^0.1.13 || ^0.2.0",
    "rxjs": "^7.8.0",
    "typeorm": "^0.3.17"
  },
  "peerDependenciesMeta": {
    "@nestjs/typeorm": {
      "optional": false
    },
    "@nestjs/bullmq": {
      "optional": false
    },
    "typeorm": {
      "optional": false
    },
    "bullmq": {
      "optional": false
    },
    "ioredis": {
      "optional": false
    }
  },
  "dependencies": {
    "@nestjs-modules/ioredis": "^2.0.2",
    "@nestjs/bull": "^11.0.2",
    "@nestjs/mapped-types": "^2.1.0",
    "date-fns": "^3.0.6",
    "handlebars": "^4.7.8",
    "joi": "^17.12.0",
    "lodash": "^4.17.21",
    "nest-commander": "^3.12.5",
    "nodemailer": "^6.9.8",
    "prom-client": "^15.1.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.2.1",
    "@nestjs/schematics": "^10.0.3",
    "@nestjs/testing": "^10.2.10",
    "@types/handlebars": "^4.1.0",
    "@types/jest": "^29.5.11",
    "@types/lodash": "^4.14.202",
    "@types/node": "^20.10.6",
    "@types/nodemailer": "^6.4.14",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.2",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "semantic-release": "^22.0.12",
    "serve": "^14.2.1",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typedoc": "^0.25.6",
    "typescript": "^5.3.3"
  },
  "optionalDependencies": {
    "@aws-sdk/client-ses": "^3.490.0",
    "@aws-sdk/client-sns": "^3.490.0",
    "@sendgrid/mail": "^8.1.0",
    "firebase-admin": "^12.0.0",
    "twilio": "^4.20.1"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s",
      "!**/*.spec.ts",
      "!**/*.interface.ts",
      "!**/*.dto.ts",
      "!**/index.ts",
      "!main.ts"
    ],
    "coverageDirectory": "../coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html",
      "json-summary"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 85,
        "functions": 85,
        "lines": 85,
        "statements": 85
      }
    },
    "testTimeout": 30000,
    "setupFilesAfterEnv": [
      "<rootDir>/../tests/setup.ts"
    ],
    "moduleNameMapping": {
      "^@/(.*)$": "<rootDir>/$1"
    }
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "tsconfig.json",
      "tsconfigRootDir": ".",
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint/eslint-plugin"
    ],
    "extends": [
      "@typescript-eslint/recommended",
      "prettier"
    ],
    "root": true,
    "env": {
      "node": true,
      "jest": true
    },
    "ignorePatterns": [
      ".eslintrc.js",
      "dist/",
      "node_modules/"
    ],
    "rules": {
      "@typescript-eslint/interface-name-prefix": "off",
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/explicit-module-boundary-types": "off",
      "@typescript-eslint/no-explicit-any": "warn"
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "semi": true,
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "funding": {
    "type": "opencollective",
    "url": "https://opencollective.com/afidos"
  }
}
