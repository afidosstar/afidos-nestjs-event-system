{
    "name": "@afidos/nestjs-event-notifications",
    "version": "1.0.0",
    "description": "Enterprise-grade event and notification system for NestJS applications",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "workspaces": [
        "examples/*"
    ],
    "scripts": {
        "build": "npm run clean && tsc -p tsconfig.build.json",
        "build:watch": "tsc -p tsconfig.build.json --watch",
        "clean": "rimraf dist coverage .nyc_output",
        "start": "node dist/index.js",
        "start:dev": "ts-node src/index.ts",
        "test": "jest",
        "cli:sync": "ts-node src/commands/sync-event-types.command.ts",
        "prebuild": "npm run clean",
        "prepublishOnly": "npm run build && npm run test:ci && npm run lint:check",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:e2e": "jest --config ./tests/jest-e2e.json",
        "test:ci": "jest --coverage --ci --watchAll=false --passWithNoTests",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "lint": "eslint \"src/**/*.ts\" \"tests/**/*.ts\" --fix",
        "lint:check": "eslint \"src/**/*.ts\" \"tests/**/*.ts\"",
        "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\" \"*.{js,json,md}\"",
        "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\" \"*.{js,json,md}\"",
        "typecheck": "tsc --noEmit",
        "start:debug": "ts-node --inspect -r tsconfig-paths/register src/main.ts",
        "docs:generate": "typedoc --options typedoc.json",
        "docs:serve": "serve docs -l 3001",
        "release": "semantic-release",
        "release:dry": "semantic-release --dry-run",
        "worker": "node scripts/start-worker.js",
        "worker:dev": "nodemon --exec \"ts-node -r tsconfig-paths/register\" src/workers/worker-main.ts",
        "worker:build": "tsc && node scripts/start-worker.js",
        "example:install": "npm install",
        "example:dev": "npm run build && npm run example:start:dev",
        "example:start": "npm --prefix examples/basic-usage run start",
        "example:start:dev": "npm --prefix examples/basic-usage run start:dev",
        "example:test": "npm --prefix examples/basic-usage test",
        "example:advanced:install": "npm --prefix examples/advanced-usage install",
        "example:advanced:dev": "npm run build && npm run example:advanced:start:dev",
        "example:advanced:start": "npm --prefix examples/advanced-usage run start",
        "example:advanced:start:dev": "npm --prefix examples/advanced-usage run start:dev",
        "example:advanced:api": "npm --prefix examples/advanced-usage run start:api",
        "example:advanced:worker": "npm --prefix examples/advanced-usage run start:worker",
        "example:advanced:monitoring": "npm --prefix examples/advanced-usage run start:monitoring"
    },
    "keywords": [
        "nestjs",
        "events",
        "notifications",
        "typescript"
    ],
    "author": "Afidos",
    "license": "MIT",
    "peerDependencies": {
        "@nestjs/bull": "^10.0.0",
        "@nestjs/common": "^10.0.0",
        "@nestjs/core": "^10.0.0",
        "@nestjs/typeorm": "^10.0.0",
        "bull": "^4.10.0",
        "typeorm": "^0.3.0"
    },
    "dependencies": {
        "@nestjs/config": "^4.0.2",
        "axios": "^1.5.0",
        "joi": "^17.9.0",
        "uuid": "^9.0.0"
    },
    "optionalDependencies": {
        "nodemailer": "^6.9.0"
    },
    "devDependencies": {
        "@types/jest": "^29.0.0",
        "@types/node": "^20.0.0",
        "@types/nodemailer": "^6.4.17",
        "@types/uuid": "^10.0.0",
        "@typescript-eslint/eslint-plugin": "^6.0.0",
        "@typescript-eslint/parser": "^6.0.0",
        "eslint": "^8.0.0",
        "jest": "^29.0.0",
        "nest-commander": "^3.11.0",
        "ts-jest": "^29.0.0",
        "ts-node": "^10.9.0",
        "typescript": "^5.0.0"
    }
}
